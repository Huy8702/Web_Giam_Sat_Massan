@model Web_Giam_Sat_Massan.Models.ReportViewModel

@{
    ViewData["Title"] = "Generate Report";
}

<h1>Lựa chọn báo cáo</h1>

<form asp-action="GenerateReport" method="post" class="form-inline">
    <div class="form-group mb-2">
        <label for="StartDate" class="mr-2">Ngày bắt đầu:</label>
        <input asp-for="StartDate" class="form-control mr-3" type="date" />
    </div>
    <div class="form-group mb-2">
        <label for="EndDate" class="mr-2">Ngày kết thúc:</label>
        <input asp-for="EndDate" class="form-control mr-3" type="date" />
    </div>
    <div class="form-group mb-2">
        <label for="Shift" class="mr-2">Ca làm việc:</label>
        <select asp-for="Shift" class="form-control mr-3">
            <option value="">-- Chọn ca --</option>
            <option value="Ca 1">Ca 1</option>
            <option value="Ca 2">Ca 2</option>
            <option value="Ca 3">Ca 3</option>
        </select>
    </div>
    <div class="form-group mb-2">
        <label for="Machine" class="mr-2">Máy:</label>
        <select asp-for="Machine" class="form-control mr-3">
            <option value="">-- Chọn máy --</option>
            <option value="Máy 1">Máy 1</option>
            <option value="Máy 2">Máy 2</option>
            
        </select>
    </div>
    <button type="submit" class="btn btn-primary mb-2">Hiển thị báo cáo</button>
</form>
